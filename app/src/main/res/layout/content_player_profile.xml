<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player Profile"
        android:id="@+id/player_profile_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imagePlayer"
        android:src="@drawable/spiderman"
        android:layout_below="@+id/player_profile_name"
        android:layout_alignRight="@+id/player_profile_name"
        android:layout_alignEnd="@+id/player_profile_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spray Chart"
        android:id="@+id/spray_chart"
        android:layout_alignTop="@+id/imagePlayer"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:onClick="SprayChartOnClickEventHandler"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:entries="@array/Stat"
        android:layout_below="@+id/imagePlayer"
        android:layout_centerVertical="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:id="@+id/player_image_btn"
        android:layout_alignBottom="@+id/imagePlayer"
        android:layout_toRightOf="@+id/player_profile_name"
        android:layout_toEndOf="@+id/player_profile_name"
        android:onClick="btnChoosePhotoPressed"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialog"
        android:id="@+id/dialog_btn"
        android:layout_alignTop="@+id/player_image_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="OnClickDialogEventHandler"/>


</RelativeLayout>