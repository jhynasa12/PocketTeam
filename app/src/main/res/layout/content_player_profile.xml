<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player Profile"
        android:id="@+id/player_profile_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/editButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imagePlayer"
        android:src="@drawable/defaultprofilepicture"
        android:onClick="btnChoosePhotoPressed"
        android:layout_below="@+id/player_profile_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/statlist"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imagePlayer"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Parent Name"
        android:id="@+id/parent_name_profile"
        android:editable="true"
        android:layout_above="@+id/player_phone_number"
        android:layout_alignLeft="@+id/player_phone_number"
        android:layout_alignStart="@+id/player_phone_number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone Number"
        android:id="@+id/player_phone_number"
        android:editable="true"
        android:layout_above="@+id/statlist"
        android:layout_alignRight="@+id/parent_contact"
        android:layout_alignEnd="@+id/parent_contact" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Position"
        android:id="@+id/player_position_profile"
        android:layout_above="@+id/parent_contact"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Contact:"
        android:id="@+id/parent_contact"
        android:layout_above="@+id/parent_name_profile"
        android:layout_alignLeft="@+id/player_position_profile"
        android:layout_alignStart="@+id/player_position_profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position"
        android:id="@+id/playerPositionView"
        android:layout_above="@+id/player_position_profile"
        android:layout_alignLeft="@+id/player_position_profile"
        android:layout_alignStart="@+id/player_position_profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        android:id="@+id/number_view"
        android:layout_below="@+id/player_profile_name"
        android:layout_alignLeft="@+id/playerPositionView"
        android:layout_alignStart="@+id/playerPositionView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player Number"
        android:id="@+id/player_jersey_number_view"
        android:layout_below="@+id/number_view"
        android:layout_alignLeft="@+id/number_view"
        android:layout_alignStart="@+id/number_view" />


</RelativeLayout>